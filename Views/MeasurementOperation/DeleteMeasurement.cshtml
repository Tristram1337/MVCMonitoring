@model MVCMonitoring.Models.Measurement
@{
    ViewData["Title"] = "Delete Measurement";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="max-width: 600px;">
        <h1 class="text-center mt-5">Welcome to the Measurement Deletion Page</h1>
        <p class="text-center">You are about to delete a measurement. Please enter the measurement's ID and station ID below. </p>
        <p class="text-center" style="color: red;"><strong>This action cannot be undone.</strong></p>
        <hr />
        <form asp-action="DeleteMeasurementAction" asp-controller="MeasurementOperation" method="post">
            <div class="form-group">
                <label for="StationId" class="control-label mt-3">Station ID</label>
                <input id="StationId" name="StationId" class="form-control" placeholder="Enter station ID" required />

                <label for="Id" class="control-label mt-3">Measurement ID</label>
                <input id="Id" name="Id" class="form-control" placeholder="Enter measurement's ID" required />
            </div>
            <button class="btn btn-danger mt-3" type="submit">Delete Measurement</button>
        </form>
    </div>
</body>
</html>