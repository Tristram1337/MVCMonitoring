@model MVCMonitoring.Models.MonitoringStation
@{
    ViewData["Title"] = "Update Station";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="max-width: 600px;">
        <h1 class="text-center mt-5">Welcome to the Station Update Page</h1>
        <p class="text-center">You are about to update a monitoring station. Please enter the new details below.</p>
        <hr />
        <form asp-action="UpdateStationAction" asp-controller="StationOperation" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="Id" class="control-label">Station ID</label>
                <input id="Id" name="Id" class="form-control" placeholder="Enter station's ID" required />

                <label for="Title" class="control-label mt-3">Station Title</label>
                <input id="Title" name="Title" class="form-control" placeholder="Enter station's title" required />

                <label for="Location" class="control-label mt-3">Station Location</label>
                <input id="Location" name="Location" class="form-control" placeholder="Enter station's location" required />

                <label for="FloodLevel" class="control-label mt-3">FloodLevel</label>
                <input id="FloodLevel" name="FloodLevel" type="text" class="form-control" placeholder="Enter station's flood level" required />

                <label for="DroughtLevel" class="control-label mt-3">Drought Level</label>
                <input id="DroughtLevel" name="DroughtLevel" type="text" class="form-control" placeholder="Enter station's drought level" required />

                <label for="TimeOutInMinutes" class="control-label mt-3">Timeout In Minutes</label>
                <input id="TimeOutInMinutes" name="TimeOutInMinutes" type="text" class="form-control" placeholder="Enter stations timeout in minutes" required />
            </div>
            <button type="button" class="btn btn-primary mt-3" onclick="updateStation()">Update Station</button>
        </form>
    </div>
    <script src="~/js/Station/UpdateStation.js" asp-append-version="true"></script>
</body>
</html>