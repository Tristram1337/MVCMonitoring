@model MVCMonitoring.Models.MonitoringStation
@{
    ViewData["Title"] = "Create Station";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="container" style="max-width: 600px;">
    <h1 class="text-center mt-5">Welcome to the Station Creation Page</h1>
    <p class="text-center">You are about to create a new monitoring station. Please enter the title and location below.</p>
    <hr />
    <form asp-action="CreateStation" asp-controller="Station" method="post">
        <div class="form-group">
            <label for="Title" class="control-label">Station Title</label>
            <input id="Title" name="Title" class="form-control" placeholder="Enter station title" />

            <label for="Location" class="control-label mt-3">Station Location</label>
            <input id="Location" name="Location" class="form-control" placeholder="Enter station location" />
        </div>

        <button class="btn btn-primary mt-3" type="submit">Create Station</button>
    </form>
</div>
